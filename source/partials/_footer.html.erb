<div id="footer">
   <div class="footer-content">
      <div class="about">
         <h3>20º Festa Junina Beneficente da Igreja Católica</h3>
         <div>
            <div class="icon">
               <i class="fa-solid fa-calendar fa-lg"></i>
               <p>29 de Junho de 2025</p>
            </div>
         <div class="icon">
               <i class="fa-solid fa-clock fa-lg"></i>
               <p>Missa às 10:00</p>
         </div>
            <div class="icon">
               <i class="fa-solid fa-location-dot fa-lg"></i>
               <p>Estádio de Toyota</p>
         </div>
         </div>
      </div>

      <div class="links">
         <ul class="lists">
            <% data.links.each do |link| %>
               <li>
                  <%= link_to link.name, link.href, class: 'page-links' %>
               </li>
            <% end %>
         </ul>

         

         <div class="contact-info">
            <h3>Informações de Contato</h3>
            <% data.contacts.each do |contact| %>
              <a href="<%= contact.name %>" target="_blank" rel="noopener" class="contact-link">
                  <i class="<%= contact.icon %>"></i>
               </a>
            <% end %>
         </div>
      </div>
   </div>
   <sub>© All rights reserved</sub>
</div>