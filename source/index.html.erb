<div class="hero-container">
  <%= partial "partials/hero_page" %>
</div>

<div class="ponto-de-vendas-container" id="ponto-de-vendas">
  <h3 class="sub-header">Ponto de vendas</h3>
</div>

<div class="info-container" id="info">
  <h3 class="sub-header">Informações</h3>
  <%= partial "partials/info_board" %>
</div>

<div class="acesso-container" id="acesso">
  <h3 class="sub-header">Acesso</h3>
  <% link_to "https://maps.app.goo.gl/3KgGXq5joE6paWz78", target: '_blank' do %>
    <div id="map" class="map-container">
    </div>
  <% end %> 
</div>

<div>
  <h3 class="sub-header">Prêmios</h3>
  <div class="grid-wrapper">
    <div class="round-grid">
      <% data.prizes.each do |game| %>
    </div>
  </div>

    <div class="card-container">
      <h3 class="prize-game"><%= game.rodada %></h3>
      <% game.prizes.each do |prize| %>
          <div class="card">
            <h4 class="prize-text"><%= prize.quina %></h4>
            <% if prize.image %>
              <%= image_tag prize.image, class: 'prize-img' %>
            <% else %>
                <p>No image ...</p>
             <% end %>
            <h4 class="prize-text"><%= prize.name %></h4>
          </div>
        <% end %>
      <% end %>
  </div>
</div>


